<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="@color/success"/> <!-- Màu khi bật -->
            <stroke android:width="2dp" android:color="#388E3C"/> <!-- Viền khi bật -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="@color/like"/> <!-- Màu khi tắt -->
            <stroke android:width="2dp" android:color="#D32F2F"/> <!-- Viền khi tắt -->
        </shape>
    </item>
</selector>
