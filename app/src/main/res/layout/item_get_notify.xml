<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/post_custom"
    android:layout_margin="15dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/notify_user_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trường TDC"
            android:textColor="@color/defaultBlue"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notify_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông báo đến toàn trường"
            android:layout_marginVertical="10dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notify_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Về việc đóng học phí và khai giảng năm học 2024- 2025, trường Cao đẳng Công nghệ Thủ Đ.."
            android:textSize="15dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/common_google_signin_btn_text_dark_disabled"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/custom_button_type2"
            android:paddingHorizontal="5dp"
            android:layout_gravity="end">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F9E8B1"
                android:textColor="#000"
                android:text="Đọc"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>