<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo_group_user"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/fit_tdc_group"
        app:layout_constraintBottom_toTopOf="@+id/name_group_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_group_user_newpost"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_new_posst"
        app:layout_constraintBottom_toBottomOf="@+id/logo_group_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo_group_user"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_group_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fit TDC"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_group_user" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_group_user">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_first_style"
            android:paddingHorizontal="5dp">

            <Button
                android:id="@+id/button_group_user_member"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="Thành viên"
                android:textColor="@color/defaultBlue"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_first_style"
            android:paddingHorizontal="5dp">

            <Button
                android:id="@+id/button_group_user_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="Bài viết"
                android:textColor="@color/defaultBlue"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_first_style"
            android:paddingHorizontal="5dp">

            <Button
                android:id="@+id/button_group_user_me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:backgroundTint="@color/white"
                android:text="Tôi"
                android:textColor="@color/defaultBlue"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>