<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Spinner
                android:id="@+id/admin_filterBySubject"
                android:layout_width="wrap_content"
                android:layout_height="48dp"/>
            <Spinner
                android:id="@+id/admin_filterByMajor"
                android:layout_width="wrap_content"
                android:layout_height="48dp"/>
            <Spinner
                android:id="@+id/admin_filterByClass"
                android:layout_width="wrap_content"
                android:layout_height="48dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/admin_searchingBar_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/list_container"
            android:padding="15dp">
            <EditText
                android:id="@+id/admin_searchingBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:hint="Tìm kiếm ..."/>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>