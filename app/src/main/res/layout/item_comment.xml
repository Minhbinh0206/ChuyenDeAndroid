<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingVertical="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/line_split_first"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/line_split_post"
        app:layout_constraintBottom_toTopOf="@+id/parent_avatar_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/parent_avatar_name"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_split_first"
        tools:layout_editor_absoluteX="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/comment_avatar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/avatar_user" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comment_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đoàn thanh niên"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/icon_time" />

                    <TextView
                        android:id="@+id/comment_create_at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="8 hour ago"
                        android:textSize="8sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hay quá bạn ơi"
                android:textSize="13dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/parent_button_interact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parent_avatar_name">

            <LinearLayout
                android:id="@+id/button_like"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingHorizontal="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/comment_like_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:background="#fff"
                    android:layout_marginHorizontal="5dp" />
                <TextView
                    android:id="@+id/comment_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="30"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_comment"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:background="#fff"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/icon_comment" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>